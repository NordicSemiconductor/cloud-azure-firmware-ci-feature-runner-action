{
  "name": "@nordicsemiconductor/cloud-azure-firmware-ci-feature-runner-action",
  "version": "0.0.0-development",
  "description": "Uses @nordicsemiconductor/e2e-bdd-test-runner to run features files of a firmware.",
  "scripts": {
    "build": "npx ncc build action.ts -o build",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NordicSemiconductor/cloud-azure-firmware-ci-feature-runner-action.git"
  },
  "bugs": {
    "url": "https://github.com/NordicSemiconductor/cloud-azure-firmware-ci-feature-runner-action/issues"
  },
  "homepage": "https://github.com/NordicSemiconductor/cloud-azure-firmware-ci-feature-runner-action#readme",
  "keywords": [
    "nrf-asset-tracker",
    "iot"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "dependencies": {
    "@actions/core": "1.10.0",
    "@azure/identity": "3.1.3",
    "@nordicsemiconductor/e2e-bdd-test-runner": "^15.1.234",
    "azure-iothub": "1.16.1",
    "chai-subset": "^1.6.0",
    "chalk": "4.1.2",
    "node-fetch": "3.3.0"
  },
  "devDependencies": {
    "@nordicsemiconductor/asset-tracker-cloud-code-style": "11.0.179",
    "@types/chai-subset": "^1.3.3",
    "@types/node": "18.13.0",
    "@types/node-fetch": "3.0.2",
    "@vercel/ncc": "0.36.1"
  },
  "lint-staged": {
    "*.{md,json,yaml,yml}": [
      "prettier --write"
    ],
    "*.ts": [
      "prettier --write",
      "eslint --ext .js,.ts"
    ]
  },
  "engines": {
    "node": ">=18",
    "npm": ">=8"
  },
  "release": {
    "branches": [
      "saga",
      {
        "name": "!(saga)",
        "prerelease": true
      }
    ],
    "remoteTags": true,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
    ]
  }
}
