{
  "name": "@nordicsemiconductor/cloud-azure-firmware-ci-feature-runner-action",
  "version": "0.0.0-development",
  "description": "Uses @nordicsemiconductor/e2e-bdd-test-runner to run features files of a firmware.",
  "scripts": {
    "build": "npx ncc build action.ts -o build",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NordicSemiconductor/cloud-azure-firmware-ci-feature-runner-action.git"
  },
  "bugs": {
    "url": "https://github.com/NordicSemiconductor/cloud-azure-firmware-ci-feature-runner-action/issues"
  },
  "homepage": "https://github.com/NordicSemiconductor/cloud-azure-firmware-ci-feature-runner-action#readme",
  "keywords": [
    "Cloud",
    "IoT",
    "nRF Asset Tracker",
    "Nordic Semiconductor"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "dependencies": {
    "@actions/core": "1.6.0",
    "@azure/identity": "2.0.1",
    "@nordicsemiconductor/e2e-bdd-test-runner": "^15.0.2",
    "azure-iothub": "1.14.6",
    "chai-subset": "^1.6.0",
    "chalk": "4.1.2",
    "node-fetch": "3.1.0",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@nordicsemiconductor/asset-tracker-cloud-code-style": "11.0.3",
    "@types/chai-subset": "^1.3.3",
    "@types/node": "16.11.19",
    "@types/node-fetch": "3.0.2",
    "@types/uuid": "8.3.4",
    "@vercel/ncc": "0.33.1"
  },
  "lint-staged": {
    "*.{md,json,yaml,yml}": [
      "prettier --write"
    ],
    "*.ts": [
      "prettier --write",
      "eslint --ext .js,.ts"
    ]
  },
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "release": {
    "branches": [
      "saga",
      {
        "name": "!(saga)",
        "prerelease": true
      }
    ],
    "remoteTags": true,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
    ]
  }
}
